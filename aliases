###########
# Aliases #
###########

# ls commands
alias l="ls -lhF --group-directories-first --color"
alias ll="l -L"
alias lll="ls -lhF --group-directories-first | less"
alias la="ls -lAhFd --group-directories-first --color .[^.]*"

# Etc
alias df="df -hT"
alias monitor_off="xset dpms force off"
alias latex="texi2pdf main.tex; evince main.pdf"
alias psgrep="ps aux | grep"
alias Q="python3 ~medik/bin/resturangQ.py"
alias dev="cd ~/dev"
alias UpdateFonts="sudo fc-cache -fv"

litter() {
    if hash trash 2>/dev/null; then
        trash "$@"
    else
        rm -v "$@"
    fi
}


# Insurance
#
alias rm="litter" #TODO: use it when it is available
alias httpserver="python3 -m http.server"

